<!-- generates the log in form, creating a user session --> 
<h1>Log In</h1>
	<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag :email %>
		<br>
		<%= text_field_tag :email %>
	</div>
  	<div class="field">
   		<%= label_tag :password %>
   		<br>
		<%= password_field_tag :password %>
	</div>
<br>
  	<div class="actions">
    	<%= submit_tag "Log In" %>
	</div>
<br>
<p><button type="button"><%= link_to "Home", root_path %></button></p> 
<% end %>